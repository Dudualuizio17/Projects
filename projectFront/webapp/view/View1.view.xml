<mvc:View 
 controllerName="projectbetelgas.controller.View1"
 xmlns:mvc="sap.ui.core.mvc"  
 xmlns:l="sap.ui.layout" 
 xmlns="sap.m"
 xmlns:f="sap.ui.layout.form">


	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplay257"
			layout="ResponsiveGridLayout"
			title="LOGIN"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="EMAIL" />
                <Input id="emailInput" placeholder="Enter Email"  type="Email" />

                <Label text="Senha" />
				<Input id="passwordInput"  type="Password" placeholder="Enter password" />
                            
			</f:content>

                     <Toolbar>
	               <ToolbarSpacer/>
	                      <Button type="Emphasized" id="btnLogin" text="Entrar" press="onPressLogin" />
                     </Toolbar>

		</f:SimpleForm>
	</VBox>
</mvc:View>
