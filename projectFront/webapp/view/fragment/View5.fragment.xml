<!--Cadastrar Produto-->

<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   xmlns:l="sap.ui.layout"
   xmlns:mvc="sap.ui.core.mvc">
   
<l:VerticalLayout class="sapUiContentPadding" width="100%">

        <Label text="NOME PRODUTO" 
               labelFor="input-h" 
               design="Bold"/> 
        <Input id="input-h" required="true"/>

        <Label text="DESCRIÇÃO" 
               labelFor="input-i" 
               design="Bold"/>
        <Input id="input-i" required="true"/>

        <Label text="PREÇO" 
               labelFor="input-j"
               design="Bold"/>
        <Input id="input-j" required="true"/>

        <Toolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Cadastrar" press="onPress" />
				
		</Toolbar>

</l:VerticalLayout>
  
</core:FragmentDefinition>
