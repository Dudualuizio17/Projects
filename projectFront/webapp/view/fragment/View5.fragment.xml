<!--Cadastrar Produto-->
<core:FragmentDefinition 
xmlns="sap.m" 
xmlns:core="sap.ui.core" 
xmlns:l="sap.ui.layout" 
xmlns:mvc="sap.ui.core.mvc"
xmlns:f="sap.ui.layout.form">

<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplay354"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="NOME PRODUTO" />
				<Text  text="{oModelEditProd>/name_pdt}" />

				<Label text=" DESCRIÇÃO" />
				<Text  text="{oModelEditProd>/description_pdt}" />

				<Label text="CONTROLE ESTOQUE" />
				<Text  text="{oModelEditProd>/stock_control_pdt}" />

				<Label text="ESTOQUE MINIMO" />
				<Text  text="{oModelEditProd>/stock_min_pdt}" />

                <Label text="PREÇO" />
				<Text  text="{oModelEditProd>/price_pdt}" />

			</f:content>
		</f:SimpleForm>
	</VBox>

    <l:VerticalLayout 
    class="sapUiContentPadding" 
    width="100%">

        <Label 
        text="NOME PRODUTO" 
        labelFor="input-h" 
        design="Bold" />
        <Input id="input-h" required="true" />

        <Label 
        text="DESCRIÇÃO" 
        labelFor="input-i" 
        design="Bold" />
        <Input id="input-i" required="true" />

        <Label 
        text="CONTROLE ESTOQUE" 
        labelFor="input-j" 
        design="Bold" />
        <Input id="input-j" required="true" />

        <Label 
        text="ESTOQUE MINIMO" 
        labelFor="input-k" 
        design="Bold" />
        <Input id="input-k" required="true" />

        <Label 
        text="PREÇO" 
        labelFor="input-l" 
        design="Bold" />
        <Input id="input-l" required="true" />

        <Toolbar>
            <ToolbarSpacer />
            <Button type="Emphasized" text="Cadastrar" press="onPressPdt" />
        </Toolbar>

    </l:VerticalLayout>
</core:FragmentDefinition>
