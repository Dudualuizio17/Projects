<!--Consultar Vendas-->

<core:FragmentDefinition
	controllerName="sap.m.sample.Table.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
		
	<Table id="idProductsTable3"
		inset="false"
		items="{
			path: 'modelVenda>/aVenda',
			sorter: {
				path: 'Name'
			}
		}">

		<headerToolbar>
			<OverflowToolbar>
				<VBox class="sapUiSmallMargin" >

					<DateRangeSelection 
						id="SaleDRS"
						change=".changeDateSales" />

				</VBox>
			</OverflowToolbar>
		</headerToolbar>

		<columns>
			
			<Column
				width="12em">
				<Text text="Produto" />
			</Column>

            <Column
                 width="12em">
				<Text text="Cliente" />
			</Column>

            <Column
				width="12em">
				<Text text="Preço" />
			</Column>

            <Column
				width="12em">
				<Text text="Quantidade" />
			</Column>

            <Column
				width="12em">
				<Text text="Data" />
			</Column>

            <Column
				width="12em">
				<Text text="Próxima Compra Estimada" />
			</Column>


		</columns>

		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text
						text="{modelVenda>produto}" />
					<Text
						text="{modelVenda>cliente}" />
                    <Text
						text="{modelVenda>preco}" />
                    <Text
						text="{modelVenda>quantidade}" />
                    <Text
						text="{modelVenda>data}" />
                    <Text
						text="{modelVenda>proximaCompraEstimada}" />    
				</cells>

			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
