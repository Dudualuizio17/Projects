<!--Consultar Vendas-->

<core:FragmentDefinition
	controllerName="sap.m.sample.Table.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
	xmlns="sap.ui.table"
	xmlns:u="sap.ui.unified">

	<Table id="idProductsTable3" 
		   rows="{modelVenda>/aVenda}" 
		   visibleRowCount="20"  
		   filter="filterPrice" 
		   ariaLabelledBy="title">

		   	<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Products"/>
						<m:ToolbarSpacer/>
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all filters"
							press="clearAllFilters"/>
						<m:ToolbarSeparator/>
					</m:OverflowToolbar>
				</extension>

        <columns>
            <Column 
				width="11rem" 
				filterProperty="Name">
                <m:Label text="VENDA" />
                <template>
                    <m:Text text="{modelVenda>sale_id}" wrapping="false" />
                </template>
            </Column>
            <Column 
				width="11rem" 
				filterProperty="Category" 
				defaultFilterOperator="StartsWith">
                <m:Label text="TOTAL VENDA(R$)" />
                <template>
                    <u:Currency value="{modelVenda>gross_amount_sl}" currency="{CurrencyCode}" wrapping="false" />
                </template>
            </Column>
            <Column width="9rem"
			filterProperty="Data" >
                <m:Label text="DATA" />
                <template>
                    <m:Text text="{path: 'modelVenda>creationdate_sl',
								  type: 'sap.ui.model.type.Date',
								  formatOptions: {style: 'short'}} " wrapping="false" />
                </template>
            </Column>
            
            <Column 
				id="price" 
				width="9rem" 
				filterProperty="Price">
                <m:Label text="CLIENTE" />
                <template>
                    <m:Text text="{modelVenda>fullName_sl}"  wrapping="false" />
                </template>
            </Column>
            <Column 
				width="6rem" 
				hAlign="End" >
                <m:Label text="" />
                <template>
                    <m:Label text="{}" />
                </template>
            </Column>
        </columns>
        <footer>
            <m:OverflowToolbar id="infobar" ></m:OverflowToolbar>
        </footer>
    </Table>

		
