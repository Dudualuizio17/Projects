<!-- Visualizar Clientes-->
<core:FragmentDefinition 
	controllerName="sap.m.sample.Table.Table" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m">

    <Table 
	id="idProductsTable" 
	inset="false" 
	items="{
			path: 'modelCliente>/aCliente',
			sorter: {
				path: 'Name'
			}
		}">

        <headerToolbar>
            <OverflowToolbar />
        </headerToolbar>

        <columns>
            <Column width="8em">
                <Text text="NOME" />
            </Column>

            <Column width="8em">
                <Text text="SOBRENOME" />
            </Column>

            <Column width="8em">
                <Text text="TELEFONE" />
            </Column>

            <Column width="9em">
                <Text text="WHATSAPP" />
            </Column>

            <Column width="13em">
                <Text text="ENDEREÇO" />
            </Column>

            <Column width="6em">
                <Text text="CEP" />
            </Column>

            <Column width="6em">
                <Text text="" />
            </Column>

            
        </columns>

        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text text="{modelCliente>name_cli}" />
                    <Text text="{modelCliente>surname_cli}" />
                    <Text text="{modelCliente>fone1_cli}" />
                    <Text text="{modelCliente>fone2_cli}" />
                    <Text text="{modelCliente>adress_cli}" />
                    <Text text="{modelCliente>cep_cli}" />
                    
					<HBox>
					    <items>
						    <MenuButton text="Opções">
							   
							    <Menu>
							        <MenuItem text="Editar" icon="sap-icon://edit" press="onPressEdit"/>
								
							        <MenuItem text="Excluir" icon="sap-icon://delete" press="onPressDelete" />
							    </Menu>

						    </MenuButton>
						</items>	
					</HBox>	
                    			
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
