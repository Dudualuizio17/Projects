<!--Visualizar Produto-->

<core:FragmentDefinition
	controllerName="sap.m.sample.Table.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	<Table 
		id="idProductsTable2"
		inset="false"
		items="{
			path: 'modelProd>/aProduto',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<OverflowToolbar>
				
			</OverflowToolbar>
		</headerToolbar>

		<columns>
			
			<Column
				width="12em">
				<Text text="PRODUTO" />
			</Column>

            <Column
                 width="12em">
				<Text text="DESCRIÇÃO" />
			</Column>

            <Column
				width="12em">
				<Text text="PREÇO" />
			</Column>

            <Column
				width="12em">
				<Text text="QUANTIDADE ESTOQUE" />
			</Column>

			<Column
				width="5em">
				<Text text=" " />
			</Column>

		</columns>

		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text text="{modelProd>name_pdt}" />
					<Text text="{modelProd>description_pdt}" />
                    <Text text="{modelProd>price_pdt}" />
                    <Text text="{modelProd>stock_control_pdt}" />
					  
					<HBox>
					    <items>
						    <MenuButton text="Opções">
							   
							    <Menu>
							        <MenuItem text="Editar" icon="sap-icon://edit" press="onPressEditProd"/>
								
							        <MenuItem text="Excluir" icon="sap-icon://delete" press="onPressDeleteProd"/>
							    </Menu>

						    </MenuButton>
						</items>	
					</HBox>	

				</cells>

			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
